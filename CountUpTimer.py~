#!/usr/bin/python
 
import sys
from PyQt4 import QtGui
 
class MainWindow(QtGui.QMainWindow):

	def __init__(self):
		QtGui.QMainWindow.__init__(self)
		self.setWindowTitle("Count Up Timer")
		self.resize(300, 300)
		self.setCentralWidget(self.getContainerWidget())
		self.show()
		
	def getContainerWidget(self):
		containerWidget = QtGui.QWidget()
		containerWidget.setLayout(self.getContainerLayout())
		return containerWidget
		
	def getContainerLayout(self):
		r1 = QtGui.QRadioButton("Radio")
		vbox = QtGui.QVBoxLayout()
		vbox.addWidget(r1)
		return vbox

app = QtGui.QApplication(sys.argv)
f = MainWindow()
app.exec_()
